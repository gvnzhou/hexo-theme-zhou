#header
  height: header-height
  color: #9d9d9d
  background-color: #222222
  box-shadow: 0 3px 4px 1px 
  
#header-inner
  position: relative
  box-sizing : border-box
  margin: 0 auto
  padding: 0 20px
  width: header-width

.navbar-nav
  display: none
  position: absolute
  top: 46px
  left: 0
  padding-top: 10px
  width: 100%
  background-color: #222222
  z-index: 999
  li
    padding-left: 20px
    height: 50px
    line-height: 50px
    cursor: pointer
    a
      display: block
      font-size: 16px
      color: #9D9D9D
      text-decoration: none
      &:hover
        color: #fff 

.header-title
  float: left
  height: header-height
  line-height: header-height
  img 
    float: left
    margin-top: 3px
    margin-right: 10px
    width: 40px
    height: 40px
    font-size: 0
  a
    float: left
    height: header-height
    line-height: header-height
    font-size: 16px
    color: #9D9D9D
    text-decoration: none

.main-nav
  float: right
  height: header-height
  line-height: header-height
  a
    margin-left: 20px
    font-size: 16px
    color: #9D9D9D
    text-decoration: none
    &:hover
      color: #fff

.navbar-toggle 
  display: none
  float: right
  margin: 7px 0
  height: 31px
  width: 40px
  background-color: transparent
  border: 1px solid #333333
  border-radius: 3px
  cursor: pointer
  text-align: center
  outline: none
  &:hover
    background-color: #333333
  .icon-bar
    margin: 4px 6px
    display: block
    width: 26px
    height: 2px
    background-color: #FFFFFF

@media screen and (max-width: 1200px) 
  #header-inner 
    width: 100%

    
@media screen and (max-width: 768px) 
  .main-nav 
    display: none
    
  .navbar-toggle 
    display: block



